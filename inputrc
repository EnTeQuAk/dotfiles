$include /etc/inputrc

# Allows us to search based on existing command.
# e.g type "cd /" and type key up to search for everything
# that starts with "cd /"
"\e[A": history-search-backward
"\e[B": history-search-forward
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
set show-all-if-ambiguous on
set completion-ignore-case on
